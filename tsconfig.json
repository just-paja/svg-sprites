{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "lib": ["es2022"],
    "strict": true,
    "target": "es2022",
    "module": "commonjs",
    "types": ["node"],
    "useUnknownInCatchVariables": false
  }
}
